<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mod5_LabC_MultiPageNavigation.Pages.MainPage"
             Title="Appception">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="appception.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="alien comes in peace image" />

            <Label
                Text="Welcome"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Appception begins..."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to the appception app. This app contains multiple apps inside of it" />

            <Label
                Text="Use the tabs to navigate to apps within an app"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Navigation tabs to navigate between apps." />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
